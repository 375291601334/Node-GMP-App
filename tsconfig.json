{
  "compilerOptions": {
    "target": "es2020",                        
    "module": "commonjs",                    
    "lib": ["es6"],                    
    "outDir": "dist",                          
    "typeRoots": ["src/types"],
    "strict": true,         
    "noImplicitAny": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "moduleResolution": "node",
    "declaration": true
  }
}
